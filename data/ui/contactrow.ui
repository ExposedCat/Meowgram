<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.24"/>
  <requires lib="libhandy" version="1.0"/>
  <template class="ContactRow" parent="GtkBox">
    <property name="visible">True</property>
    <property name="margin-start">12</property>
    <property name="margin-end">12</property>
    <property name="margin-top">6</property>
    <property name="margin-bottom">6</property>
    <property name="spacing">12</property>
    <child>
      <object class="HdyAvatar" id="avatar">
        <property name="visible">True</property>
        <property name="show-initials">True</property>
        <property name="size">42</property>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="visible">True</property>
        <property name="hexpand">True</property>
        <property name="orientation">vertical</property>
        <property name="homogeneous">True</property>
        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkLabel" id="contact_name_label">
                <property name="visible">True</property>
                <property name="halign">start</property>
                <property name="ellipsize">end</property>
                <property name="xalign">0</property>
                <style>
                  <class name="bold-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkImage" id="mute_status">
                <property name="visible">True</property>
                <property name="halign">start</property>
                <property name="valign">center</property>
                <property name="pixel-size">12</property>
                <property name="icon-name">notifications-disabled-symbolic</property>
                <style>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="time_label">
                <property name="visible">True</property>
                <property name="valign">center</property>
                <property name="margin-top">3</property>
                <style>
                  <class name="dim-label"/>
                  <class name="time-label"/>
                </style>
              </object>
              <packing>
                <property name="pack-type">end</property>
              </packing>
            </child>
            <child>
              <object class="GtkImage" id="read_status">
                <property name="halign">center</property>
                <property name="margin-top">2</property>
                <property name="pixel-size">12</property>
                <property name="icon-name">object-select-symbolic</property>
                <style>
                  <class name="status"/>
                </style>
              </object>
              <packing>
                <property name="pack-type">end</property>
              </packing>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="visible">True</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkLabel" id="last_message_label">
                <property name="visible">True</property>
                <property name="halign">start</property>
                <property name="ellipsize">end</property>
                <property name="xalign">0</property>
                <style>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="unread_label">
                <property name="halign">end</property>
                <property name="valign">center</property>
                <style>
                  <class name="unread-badge"/>
                </style>
              </object>
              <packing>
                <property name="pack-type">end</property>
              </packing>
            </child>
            <child>
              <object class="GtkImage" id="pin_status">
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="pixel-size">12</property>
                <property name="icon-name">pin-symbolic</property>
                <style>
                  <class name="unread-badge"/>
                  <class name="muted-badge"/>
                </style>
              </object>
              <packing>
                <property name="pack-type">end</property>
              </packing>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
